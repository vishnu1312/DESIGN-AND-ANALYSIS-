#include<iostream>
#include<iomanip>
using namespace std;
long fact(long n){
   int i, fact = 1;
   for(i=n; i>1; i--)
      fact *= i;
   return fact;
}
int nCr(long n, long r){
   long nume = 1, i;
   for(i=n; i>r; i--)
      nume *= i;
   return (nume/fact(n-r));
}
void PascalsTriangle(int n){
   for(int i = 0; i<n; i++){
      for(int j = 0; j<=n-i; j++)
         cout <<setw(3)<< " ";
      for(int j = 0; j<=i; j++)
         cout <<setw(3)<< nCr(i, j) <<setw(3)<< " ";
      cout << endl;
   }
}
main(){
   int n;
   cout << "Enter n: ";
   cin >> n;
   PascalsTriangle(n);
}
